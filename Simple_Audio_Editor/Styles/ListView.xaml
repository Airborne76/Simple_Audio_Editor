    xmlns:local="using:Simple_Audio_Editor.Styles">
    <Style x:Key="ListViewItemStretchNoAcrylicStyle" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
